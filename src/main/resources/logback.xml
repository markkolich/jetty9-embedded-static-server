<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.out</target>
        <encoder>
            <pattern>%green(%date{"yyyy-MM-dd'T'HH:mm:ss,SSSXXX", UTC}) %highlight(%level) %yellow([%thread]) %cyan(%logger{1}:%line) - %msg%n
            </pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
